{% extends 'GolfEnLaNubeBundle::layout.html.twig' %}

{% block page_header -%}
	<h3>Torneos</h3>
{% endblock %}

{% block body -%}
	<div class='row'>
		<div class='col-md-12'>
			<table class="records_list table table-striped table-condensed table-bordered">
				<thead>
					<tr>
						<th>Id</th>
						<th>Nombre</th>
						<th>Inicio</th>
						<th>Institucion</th>
						<th>D&iacute;as</th>
						<th>Formato juego</th>
						<th>Apertura inscripcion</th>
						<th>Cierre inscripcion</th>
						<th>Tipo torneo</th>
						<!-- th>Hoyos</th -->
						<th>&nbsp;</th>
					</tr>
				</thead>
				<tbody>
				{% for entity in entities %}
					{% for fecha in entity.fechas %}
						<tr>
							<td><a href="{{ path('admin_torneo_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
							<td>{{ entity.nombre }}</td>
							<td>{% if entity.inicio %}{{ entity.inicio|date('d-m-Y') }}{% endif %}</td>
							<td>{{ entity.institucion }}</td>
							<td>{{ entity.dias }}</td>
							<td>{{ entity.formatojuego }}</td>
			
							<td>{% if fecha.aperturainscripcion %}{{ fecha.aperturainscripcion|date('d-m-Y') }}{% endif %}</td>
							<td>{% if fecha.cierreinscripcion %}{{ fecha.cierreinscripcion|date('d-m-Y') }}{% endif %}</td>
							<td>{{ entity.tipotorneo|humanize }}</td>
							<!-- td>{#{ entity.hoyospordia }#}</td -->
							<td>
								<ul class='list-inline'>
									<li>
										<a href="{{ path('admin_torneo_edit', { 'id': entity.id }) }}" class='btn btn-default  btn-sm'>{{ icon('edit') }} Modificar</a>
									</li>
								</ul>
							</td>
						</tr>
						{% endfor %}
				{% endfor %}
				</tbody>
			</table>
		</div>
	</div>

	<div class='row'>
		<div class='col-md-12'>
			<ul  class='list-unstyled'>
				<li>
					<a href="{{ path('admin_torneo_new') }}">
						Nuevo torneo
					</a>
				</li>
			</ul>
		</div>
	</div>


{% endblock %}
