{{ form_start(form, {'style': 'horizontal'}) }}
	{{ form_errors(form) }}
	{% set persona = form.persona %}
	{{ bootstrap_set_label_col(4) }}
	{{ bootstrap_set_widget_col(8) }}  

	{{ form_row(form.email) }}
	
	{{ form_row(form.plainPassword)  }}

	{{ form_row(persona.nombre_completo)  }}
	
	{{ form_row(persona.sexo)  }}

	{{ form_row(persona.fecha_nacimiento)  }}
	
	{{ form_row(persona.tipo_documento)  }}
	
	{{ form_row(persona.numero_documento)  }}
	
	{{ form_widget(form.submit) }}

	<!-- hidden -->
	{{ form_widget(form._token) }}
</form>
