{% extends 'GolfEnLaNubeBundle::layout.html.twig' %}

{% block page_header -%}
	<h3>Formatos de juego</h3>
{% endblock %}

{% block body -%}
	<div class='row'>
		<div class='col-md-12'>
			<table class="records_list table table-striped table-condensed table-bordered">
				<thead>
					<tr>
		                <th>Id</th>
		                <th>Nombre</th>
		                <th>&nbsp;</th>
		            </tr>
		        </thead>
		        <tbody>
		        {% for entity in entities %}
		            <tr>
		                <td><a href="{{ path('admin_formatojuego_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
		                <td>{{ entity.nombre }}</td>
		                <td>
			                <ul class='list-inline'>
			                    <li>
			                        <a href="{{ path('admin_formatojuego_edit', { 'id': entity.id }) }}" class='btn btn-default btn-sm' >{{ icon('edit') }} Modificar</a>
			                    </li>
			                </ul>
		                </td>
		            </tr>
		        {% endfor %}
		        </tbody>
		    </table>
		</div>
	</div>
	<div class='row'>
		<div class='col-md-12'>
	        <ul>
		        <li>
		            <a href="{{ path('admin_formatojuego_new') }}" class='btn btn-default btn-sm'>
		                Nuevo
		            </a>
		        </li>
		    </ul>
		</div>
	</div>
    {% endblock %}
