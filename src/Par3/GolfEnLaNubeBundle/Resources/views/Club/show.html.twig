{% extends 'GolfEnLaNubeBundle::layout.html.twig' %}

{% block page_header -%}
	<h3>{{ entity.codigoaag }} : {{ entity.nombre }}</h3>
{% endblock %}

{% block body -%}

	<div class='row '>
		<div class='col-lg-12'>
			<ul class="list-group record_properties">
				<li class="list-group-item">Codigo AAG: <strong>{{ entity.codigoaag }}</strong></li>
				<li class="list-group-item">Instituci&oacute;n: <strong>{{ entity.institucion.nombre }}</strong></li>
			</ul>
		</div>
	</div>

	
	
	<div class="panel panel-default">
		<!-- Default panel contents -->
		<div class="panel-heading">Canchas</div>
		
		<!-- List group -->
		<table class="table table-condensed table-bordered ">
			
			<tbody>
				<tr> 
					<th rowspan='2'  class='text-center'  >N&uacute;mero</td>
					<th  class='text-center' colspan='2'>Tees</td>
				</tr>
				<tr>
					<td class='text-center' >Tee</td>
					<td class='text-center' >Calificaci&oacute;n</td>
				</tr>
				{% for cancha in entity.canchas %}
					<tr class='active'>
						<td colspan='3'>{{ cancha.numero }}</td>
					</tr>
					{% for tee in cancha.tees %}
					<tr>
						<td>&nbsp;</td>
						<td>{{ tee.numero }}</td>
						<td>{{ tee.calificacion }}</td>
					</tr>
					{% endfor %}
					
				{% endfor %}
			</tbody>
		</table>
	</div>


	<div class='row '>
		<div class='col-lg-12'>
			<ul class="record_actions list-inline">
				<li>
					<a href="{{ path('admin_club') }}">
						Volver
					</a>
				</li>
				<li>
					<a href="{{ path('admin_club_edit', { 'id': entity.id }) }}">
						Editar
					</a>
				</li>
				<li>{{ form(delete_form) }}</li>
			</ul>
		</div>
	</div>
{% endblock %}
